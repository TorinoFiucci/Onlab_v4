@* Onlab_v4.Client/Layout/NavMenu.razor *@
<div class="sidebar">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="concerts">
                <span class="oi oi-musical-note" aria-hidden="true"></span> Concerts
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="setlists">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Setlists
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="tasks">
                <span class="oi oi-check" aria-hidden="true"></span> Tasks
            </NavLink>
        </div>
    </nav>
</div>

<style>
    .sidebar {
        background-color: #2c3e50; /* Dark background for sidebar */
        width: 250px; /* Adjust as needed */
        height: calc(100vh - 60px); /* Full height minus top bar height */
        padding-top: 1rem;
    }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.75); /* Light text for links */
            border-radius: 4px;
            margin: 0.25rem 0;
        }

            .sidebar .nav-link:hover {
                color: rgba(255, 255, 255, 1);
                background-color: rgba(255,255,255,0.1);
            }

            .sidebar .nav-link.active {
                color: white;
                font-weight: bold;
                background-color: #1abc9c; /* Active link background color */
            }

    /* For Open Iconic icons if you're using them */
    .oi {
        margin-right: 0.5rem;
    }
</style>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}